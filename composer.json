{
    "name": "kudashevs/calculator-via-injection",
    "type": "case-study",
    "description": "A simple calculator app that implements math operations via a dependency injection.",
    "keywords": ["php", "study", "case study", "calculator", "interface"],
    "license": "MIT",
    "authors": [
        {
            "name": "Serge Kudashev",
            "email": "kudashevs@gmail.com"
        }
    ],
    "require": {
        "php": "^7.4|^8.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0|^9.0|^10.0"
    },
    "autoload": {
        "psr-4": {
            "CalculatorViaInterface\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CalculatorViaInterface\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit --no-coverage",
        "test-coverage": "vendor/bin/phpunit --coverage-html build/coverage"
    }
}
